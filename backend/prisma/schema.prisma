// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  passwordHash  String
  favorites     Favorite[]
}

model Movie {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  posterUrl    String
  releaseDate  DateTime
  favorites    Favorite[]
}

model Favorite {
  userId  Int
  movieId Int
  user    User   @relation(fields: [userId], references: [id])
  movie   Movie  @relation(fields: [movieId], references: [id])
  @@id([userId, movieId])
}
